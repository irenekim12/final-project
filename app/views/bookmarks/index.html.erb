<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all bookmarks
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new bookmark
    </h2>

    <form action="/insert_bookmark" method="post">
      <div class="form-group">
        <label for="furniture_id_box">
          Furniture
        </label>

        <input type="text" id="furniture_id_box" name="query_furniture_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create bookmark
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Furniture
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <%= bookmark.id %>
        </td>

        <td>
          <%= bookmark.furniture_id %>
        </td>

        <td>
          <%= bookmark.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
